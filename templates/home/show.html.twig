					<ul class="list-group list-group-flush d-flex flex-column">
						<li class="list-group-item me-4">
							<span class="fs-4 d-flex justify-content-between">
								<span class="text-success">
									{{ product.price }}
									â‚¬
								</span>
							</span>
						</li>
					</ul>
				{% endfor %}
			</div>
		</div>
	</main>
{% endblock %}
