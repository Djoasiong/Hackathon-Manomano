								<span class="fs-4 d-flex flex-column justify-content-between">
									<a href="{{ path('cart_add', {'id':product.id}) }}" class="btn btn-succes float-right">
										<img class="{% if cart[product.id] is defined %} itemImage {% else %} itemNotSelected {% endif %}" src="{{ vich_uploader_asset(product) }}" alt="">
									</a>
									<span class="text-success text-center">
										{{ product.price }}
										€
									</span>
								</span>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="d-flex flex-column align-items-center">
					<h3>Sérénité</h3>
					<ul class="list-group list-unstyled d-flex flex-column">
						{% for product in style.products|filter(product => product.category.name == 'salle de bain') %}
							<li class="">
								<span class="fs-4 d-flex flex-column justify-content-between">
									<a href="{{ path('cart_add', {'id':product.id}) }}" class="btn btn-succes float-right">
										<img class="{% if cart[product.id] is defined %} itemImage {% else %} itemNotSelected {% endif %}" src="{{ vich_uploader_asset(product) }}" alt="">
									</a>
									<span class="text-success text-center">
										{{ product.price }}
										€
									</span>
								</span>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
