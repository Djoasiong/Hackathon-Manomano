{% extends "base.html.twig" %}
{% block body %}
	<main class="container mb-4 mt-5 d-flex justify-content-center flex-column">
		<h2 class="text-center text-dark fs-4">{{ style.description }}</h2>
		<div class="d-flex justify-content-center mt-5">
			<div class="card mb-1">
				<img class="card-img img-show" src="{{ vich_uploader_asset(style) }}" alt="{{ style.image}}">
			</div>
			<div class="productList d-flex align-items-start ms-5">
